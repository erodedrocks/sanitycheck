{
  "manifest_version": 3,
  "name": "SanityCheck",
  "version": "0.1.0",
  "description": "Scrapes tweets from the home feed and adds a visual indicator to each processed tweet.",
  "action": {
    "default_title": "SanityCheck"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://*.twitter.com/*",
    "https://x.com/*",
    "https://*.x.com/*",
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://*.twitter.com/*",
        "https://x.com/*",
        "https://*.x.com/*"
      ],
      "js": ["scripts/content.js", "scripts/discourager.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "audio/*.mp3"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://*.twitter.com/*", 
        "https://x.com/*",
        "https://*.x.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "options_page": "options/index.html"
}
